<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idTextCity"
        android:layout_width="315dp"
        android:layout_height="61dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idButton"
        android:layout_width="177dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="116dp"
        android:background="#2196F3"
        android:text="Check the weather"
        android:textColor="#EBEBEB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTextCity" />

    <TextView
        android:id="@+id/idTextInternetError"
        android:layout_width="419dp"
        android:layout_height="46dp"
        android:background="#FC8224"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Internet connection required"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="207dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toTopOf="@+id/idTextCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTextInternetError"
        app:srcCompat="@drawable/weathericonpng" />

</androidx.constraintlayout.widget.ConstraintLayout>